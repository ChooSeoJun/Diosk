<Window x:Class="Diosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diosk"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <local:TableControl x:Name="tableCtrl" Visibility="Visible" Background="Black"/>
        <local:LoadingWindow x:Name="loadingCtrl" Visibility="Collapsed" 
                             Height="450" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
