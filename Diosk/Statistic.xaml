<UserControl x:Class="Diosk.Statistic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diosk"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1200"
             Background="#f2f2f2"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#ffea00">
            <Image Height="50" HorizontalAlignment="Left" Source="Assets/logo.png" Margin="100, 0, 0, 0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid Width="600" Height="50" Panel.ZIndex="99" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 50, 0, 0">
                <TextBlock Text="하루 매출액: 5000" FontSize="35" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="NanumSquare"/>
            </Grid>
            <Grid Background="#323232" Panel.ZIndex="98">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <lvc:CartesianChart Grid.Column="0" Series="{Binding SeriesCollection}" LegendLocation="Left" Width="550" Height="450" VerticalAlignment="Bottom" Margin="0, 0, 0, 150">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="MENU" Labels="{Binding Labels}"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="수치" LabelFormatter="{Binding Formatter}"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
                <lvc:CartesianChart Grid.Column="1" Series="{Binding SeriesCollectionSec}" LegendLocation="Left" Width="550" Height="450" VerticalAlignment="Bottom" Margin="0, 0, 0, 150">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="CATEGORY" Labels="{Binding LabelsSec}"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="수치" LabelFormatter="{Binding FormatterSec}"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
